<p id="notice"><%= notice %></p>

<div class="container">

<h1>Tweets</h1>

<table class="table">

  <div class="panel-group">
    <div class="panel panel-default">
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td>@<%= tweet.user.username %></td>
        <td><button class="button"><%= link_to 'Show', tweet %></button></td>
        <td><button class="button"><%= link_to 'Edit', edit_tweet_path(tweet) %></button></td>
        <td><button class="button"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>

    <% end %>
  </tbody>
</div>
</table>
</div>
<br>

<%= link_to 'New Tweet', new_tweet_path %>

